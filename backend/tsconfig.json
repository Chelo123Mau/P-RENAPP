{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "dist",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  },
  
  "include": ["src/**/*.ts",
    "src/types/**/*.d.ts"]
}
